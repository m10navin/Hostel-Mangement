<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- First CardView for Warden1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewWarden1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewWardenName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warden1 Name: Ramachandran"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPhoneNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewWardenName1"
                android:text="Phone Number: 5678923412"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewOccupation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPhoneNumber1"
                android:text="Occupation: Warden"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/imageButtonCall1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewOccupation1"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_menu_call" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Second CardView for Warden2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewWarden2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewWardenName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warden2 Name: Rajesh"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewPhoneNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewWardenName2"
                android:text="Phone Number: 9823674561"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewOccupation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPhoneNumber2"
                android:text="Occupation: Warden"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/imageButtonCall2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewOccupation2"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_menu_call" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
